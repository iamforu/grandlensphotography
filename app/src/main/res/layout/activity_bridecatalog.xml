<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashwini.harekrishna.Bridecatalog">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageAndroid"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="209dp"
        android:layout_height="51dp"
        android:background="@drawable/xyz"
        android:textColor="@android:color/white"
        android:text="BOOK"
        android:textSize="20sp"
        android:id="@+id/btnsignin"
        android:onClick="onclick"
        android:layout_below="@+id/txtpass"
        android:layout_alignLeft="@+id/txtpass"
        android:layout_alignStart="@+id/txtpass"
        android:layout_alignRight="@+id/txtpass"
        android:layout_alignEnd="@+id/txtpass"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.981" />
    <TextView
        android:id="@+id/textView16"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:textColor="#E91E63"
        android:text=" SLIDE TO VIEW THE IMAGES"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="52dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.825" />


</android.support.constraint.ConstraintLayout>